{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação de um clone do https://www.tabnews.com.br/ para o https://curso.dev",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "services:up": "podman compose -f infra/compose.yml up -d",
    "services:stop": "podman compose -f infra/compose.yml stop",
    "services:down": "podman compose -f infra/compose.yml down --remove-orphans",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alxdi4z/clone-tabnews.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alxdi4z/clone-tabnews/issues"
  },
  "homepage": "https://github.com/alxdi4z/clone-tabnews#readme",
  "dependencies": {
    "next": "^13.1.6",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "prettier": "^3.0.3"
  }
}
